<div class="wrapper ">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="header">
          <h3>Results for : <strong><%= @query[:query] %></strong> ...</h3>
          <%= link_to 'Back', restaurants_path, class: "btn btn-primary"%>
        </div>
      </div>
    </div>
    <div class="row">
      <% @restaurants.each do |restaurant| %>
        <div class="col-sm-6 col-md-4">
          <%= link_to restaurant_path(restaurant) do %>
            <%= render partial: 'card', locals: { resto: restaurant } %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
